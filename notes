# Exercise 1: Palindrome Checker
def is_palindrome(s):
    return s == s[::-1]

# Test the palindrome function
word = "radar"
print(f"1. {word} is a palindrome: {is_palindrome(word)}")

# Exercise 2: Factorial Calculator
def factorial(n):
    if n == 0 or n == 1:
        return 1
    else:
        return n * factorial(n - 1)

# Test the factorial function
number = 5
print(f"2. The factorial of {number} is: {factorial(number)}")

# Exercise 3: Prime Number Checker
def is_prime(num):
    if num < 2:
        return False
    for i in range(2, int(num**0.5) + 1):
        if num % i == 0:
            return False
    return True

# Test the prime number function
num_to_check = 17
print(f"3. {num_to_check} is a prime number: {is_prime(num_to_check)}")

# Exercise 4: List Comprehension
# Generate a list of squares for numbers from 1 to 5
squares = [x**2 for x in range(1, 6)]
print(f"4. List of squares: {squares}")

# Exercise 5: String Manipulation
# Convert a string to uppercase and print the result
original_string = "hello, world!"
uppercase_string = original_string.upper()
print(f"5. Uppercase string: {uppercase_string}")
